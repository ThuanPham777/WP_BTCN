<Page
    x:Class="DrawingApp.UI.Pages.BoardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DrawingApp.UI.ViewModels">

    <StackPanel Padding="24" Spacing="10">
        <TextBlock Text="Boards" FontSize="24"/>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Load" Command="{Binding LoadCommand}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <ListView ItemsSource="{Binding Items}"
          SelectedItem="{Binding Selected, Mode=TwoWay}"
          IsItemClickEnabled="True"
          ItemClick="BoardsList_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding CreatedAt}" Opacity="0.6"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackPanel>
</Page>
