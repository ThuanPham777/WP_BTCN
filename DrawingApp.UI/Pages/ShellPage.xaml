<Page
    x:Class="DrawingApp.UI.Pages.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DrawingApp.UI.ViewModels"
    xmlns:local="using:DrawingApp.UI.Pages"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Page.DataContext>
        <vm:ShellViewModel />
    </Page.DataContext>

    <Grid>
        <controls:NavigationView
            x:Name="Nav"
            IsBackButtonVisible="Visible"
            BackRequested="Nav_BackRequested"
            SelectionChanged="Nav_SelectionChanged">

            <controls:NavigationView.MenuItems>
                <controls:NavigationViewItem Content="Home" Tag="main" Icon="Home"/>
                <controls:NavigationViewItem Content="Profiles" Tag="profiles" Icon="Contact"/>
                <controls:NavigationViewItem Content="Draw" Tag="draw" Icon="Edit"/>
                <controls:NavigationViewItem Content="Management" Tag="mgmt" Icon="AllApps"/>
            </controls:NavigationView.MenuItems>

            <Frame x:Name="RootFrame"/>
        </controls:NavigationView>
    </Grid>
</Page>
