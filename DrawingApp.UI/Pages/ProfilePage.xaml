<Page
    x:Class="DrawingApp.UI.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:DrawingApp.UI.ViewModels"
    xmlns:enums="using:DrawingApp.Core.Enums">

    <Grid Padding="24" ColumnDefinitions="2*,3*" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Load" Command="{Binding LoadAsyncCommand}"/>
            <Button Content="Fill" Command="{Binding FillFromSelectedCommand}"/>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  DisplayMemberPath="Name"
                  Margin="0,12,12,0"/>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="12,12,0,0">
            <StackPanel Spacing="10">
                <TextBlock Text="Profile Details" FontSize="22"/>

                <TextBox Header="Name" Text="{Binding Name, Mode=TwoWay}"/>

                <ComboBox Header="Theme"
                          SelectedItem="{Binding Theme, Mode=TwoWay}">
                    <enums:AppTheme>System</enums:AppTheme>
                    <enums:AppTheme>Light</enums:AppTheme>
                    <enums:AppTheme>Dark</enums:AppTheme>
                </ComboBox>

                <NumberBox Header="Default Board Width" Value="{Binding DefaultBoardWidth, Mode=TwoWay}"/>
                <NumberBox Header="Default Board Height" Value="{Binding DefaultBoardHeight, Mode=TwoWay}"/>

                <TextBox Header="Default Stroke Color (ARGB hex)" Text="{Binding DefaultStrokeColor, Mode=TwoWay}"/>
                <NumberBox Header="Default Thickness" Value="{Binding DefaultStrokeThickness, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Create" Command="{Binding CreateAsyncCommand}"/>
                    <Button Content="Update" Command="{Binding UpdateAsyncCommand}"/>
                    <Button Content="Delete" Command="{Binding DeleteAsyncCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
