<Page
    x:Class="DrawingApp.UI.Pages.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" ColumnDefinitions="2*,3*" RowDefinitions="Auto,*">

        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Load" Command="{Binding LoadCommand}"/>
            <Button Content="New" Command="{Binding NewProfileCommand}"/>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected, Mode=TwoWay}"
                  SelectionMode="Single"
                  DisplayMemberPath="Name"
                  Margin="0,12,12,0"/>

        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="12,12,0,0">
            <StackPanel Spacing="10">
                <TextBlock Text="Profile Details" FontSize="22"/>

                <TextBox Header="Name"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <ComboBox Header="Theme"
                          Width="220"
                          ItemsSource="{Binding ThemeOptions}"
                          SelectedItem="{Binding Theme, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <NumberBox Header="Default Board Width"
                           Value="{Binding DefaultBoardWidth, Mode=TwoWay}"/>

                <NumberBox Header="Default Board Height"
                           Value="{Binding DefaultBoardHeight, Mode=TwoWay}"/>

                <TextBox Header="Default Stroke Color (ARGB hex)"
                         Text="{Binding DefaultStrokeColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <NumberBox Header="Default Thickness"
                           Value="{Binding DefaultStrokeThickness, Mode=TwoWay}"/>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Create" Command="{Binding CreateCommand}"/>
                    <Button Content="Update" Command="{Binding UpdateCommand}"/>
                    <Button Content="Delete" Command="{Binding DeleteCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
