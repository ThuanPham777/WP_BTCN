<Page
    x:Class="DrawingApp.UI.Pages.DrawingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:enums="using:DrawingApp.Core.Enums">

    <Grid RowDefinitions="Auto,*" Padding="12">
        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <ComboBox Width="180"
                      SelectedItem="{Binding CurrentTool, Mode=TwoWay}">
                <enums:ShapeType>Line</enums:ShapeType>
                <enums:ShapeType>Rectangle</enums:ShapeType>
                <enums:ShapeType>Oval</enums:ShapeType>
                <enums:ShapeType>Circle</enums:ShapeType>
                <enums:ShapeType>Triangle</enums:ShapeType>
                <enums:ShapeType>Polygon</enums:ShapeType>
            </ComboBox>

            <TextBox Width="140" PlaceholderText="Stroke #AARRGGBB"
                     Text="{Binding StrokeColor, Mode=TwoWay}"/>
            <TextBox Width="140" PlaceholderText="Fill #AARRGGBB"
                     Text="{Binding FillColor, Mode=TwoWay}"/>
            <NumberBox Width="110" Header="Thickness"
                       Value="{Binding Thickness, Mode=TwoWay}"/>

            <NumberBox Width="120" Header="Board W"
                       Value="{Binding BoardWidth, Mode=TwoWay}"/>
            <NumberBox Width="120" Header="Board H"
                       Value="{Binding BoardHeight, Mode=TwoWay}"/>

            <TextBox Width="160" PlaceholderText="Board BG"
                     Text="{Binding BoardBackground, Mode=TwoWay}"/>

            <Button Content="Save Board" Command="{Binding SaveBoardAsyncCommand}"/>
            <Button Content="Save Last Shape -> Template" Command="{Binding SaveLastShapeAsTemplateAsyncCommand}"/>
        </StackPanel>

        <!-- Canvas -->
        <Border Grid.Row="1"
                Margin="0,12,0,0"
                Background="White"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="1">
            <Canvas x:Name="DrawCanvas"
                    Width="{Binding BoardWidth}"
                    Height="{Binding BoardHeight}"/>
        </Border>
    </Grid>
</Page>
